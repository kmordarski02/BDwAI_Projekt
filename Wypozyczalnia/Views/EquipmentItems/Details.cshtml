@model Wypozyczalnia.Models.EquipmentItem
@{
    ViewData["Title"] = "Szczegóły sprzętu";
}

<h1>Szczegóły sprzętu</h1>

<dl class="row">
    <dt class="col-sm-2">Nazwa</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Kategoria</dt>
    <dd class="col-sm-10">@Model.Category?.Name</dd>

    <dt class="col-sm-2">Płeć</dt>
    <dd class="col-sm-10">@Model.TargetGender</dd>

    <dt class="col-sm-2">Rozmiar</dt>
    <dd class="col-sm-10">@Model.Size</dd>

    <dt class="col-sm-2">Cena za godzinę</dt>
    <dd class="col-sm-10">@Model.PricePerHour.ToString("C")</dd>

    <dt class="col-sm-2">Sezon</dt>
    <dd class="col-sm-10">@Model.Season</dd>

    <dt class="col-sm-2">Ilość</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>
</dl>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edytuj</a> 
    }
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
    <!-- Link to Rent (Create Reservation) -->
    @if (!User.IsInRole("Admin")) 
    {
        <a asp-controller="Reservations" asp-action="Create" asp-route-equipmentId="@Model.Id" class="btn btn-primary">Wypożycz</a>
    }
</p>
