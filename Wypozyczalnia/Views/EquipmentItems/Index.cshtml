@model IEnumerable<Wypozyczalnia.Models.EquipmentItem>
@{
    ViewData["Title"] = "Lista sprzętu";
}
<h1>Lista sprzętu</h1>

<div class="mb-3">
    <div class="btn-group" role="group">
        <a asp-action="Index" class="btn @(ViewData["CurrentSeason"] == null ? "btn-primary" : "btn-outline-primary")">Wszystkie</a>
        <a asp-action="Index" asp-route-season="Letni" class="btn @(Convert.ToString(ViewData["CurrentSeason"]) == "Letni" ? "btn-primary" : "btn-outline-primary")">Lato</a>
        <a asp-action="Index" asp-route-season="Zimowy" class="btn @(Convert.ToString(ViewData["CurrentSeason"]) == "Zimowy" ? "btn-primary" : "btn-outline-primary")">Zima</a>
    </div>
</div>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">Dodaj nowy sprzęt</a>
    }
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Kategoria</th>
            <th>Płeć</th>
            <th>Rozmiar</th>
            <th>Cena/godz.</th>
            <th>Sezon</th>
            <th>Ilość</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category?.Name</td>
                <td>@item.TargetGender</td>
                <td>@item.Size</td>
                <td>@item.PricePerHour.ToString("C")</td>
                <td>@item.Season</td>
                <td>@item.Quantity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <text> | <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> | <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a></text>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
