@model Wypozyczalnia.Models.EquipmentItem
@{
    ViewData["Title"] = "Usuń sprzęt";
}
<h1>Usuń sprzęt</h1>

<h3>Czy na pewno chcesz usunąć ten sprzęt?</h3>
<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Kategoria</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>
        <dt class="col-sm-2">Ilość</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
